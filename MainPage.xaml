<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_PickerExample.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="أفكار جديدة" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
            <StackLayout Orientation="Vertical">

                <Button Text="Picker Page" x:Name="_PickerPage"  />
                <Button Text="Date Picker Page" x:Name="_DatePickerPage"  />
            </StackLayout>
            <StackLayout Orientation="Vertical">
                <Button Text="WebView Page" x:Name="_WebViewPage"  />
                <Button Text="Tabbed Page" x:Name="_TabbedPage"  />
                <Button Text="Media Picker" x:Name="_MediaPicker"  />

            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>
