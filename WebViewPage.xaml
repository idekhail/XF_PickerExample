<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_PickerExample.WebViewPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                HorizontalOptions="CenterAndExpand" />

            <Label  x:Name="labelLoading" Text="Wait for Loading..." FontSize="20"  IsVisible="false" />

            <WebView x:Name="_WebView" Source="https://www.microsoft.com/ar-sa/" 
                     WidthRequest="1000" HeightRequest="5000" Navigated="webviewNavigated" Navigating="webviewNavigating" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>